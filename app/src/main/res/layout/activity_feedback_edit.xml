<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="100dp"
        android:text="Edit your details"
        android:layout_gravity="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:typeface="serif" />


    <TextView
        android:id="@+id/name_label"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text=" Name"
        android:textColor="#1E1C1C"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="350dp"
        android:layout_height="64dp"
        android:hint="   Enter your name"
        android:layout_gravity="center"
        android:textColorHint="#8C7474"
        android:typeface="serif"
        android:background="@drawable/orange_border"/>

    <TextView
        android:id="@+id/feedback_label"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=" Phone number"
        android:textColor="#171616"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/feedback_edit_text"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:hint="    Edit your phone number"
        android:textColor="#0B0A0A"
        android:textColorHint="#8C7474"
        android:background="@drawable/orange_border"/>


    <TextView
        android:id="@+id/email_label"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text=" Amount"
        android:textColor="#0E0E0E"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginTop="10dp"/>
    />


    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:hint="    change your amount"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        android:textColorHint="#8C7474"
        android:typeface="serif"
        android:background="@drawable/orange_border"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#C81313"
            android:text="Cancel"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />


        <Button
            android:id="@+id/save_button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#106713"
            android:text="Save"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            />


    </LinearLayout>

</LinearLayout>
