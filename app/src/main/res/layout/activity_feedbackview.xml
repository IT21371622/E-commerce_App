<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    android:textColor="#000000"
    android:layout_marginTop="10dp"
    tools:context=".feedbackview">


    <TextView
        android:layout_width="376dp"
        android:layout_height="87dp"
        android:layout_marginBottom="16dp"
        android:text="Thank you for your donation!"
        android:textColor="#151414"
        android:textColorHighlight="#151111"
        android:textColorLink="#191515"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/name_view"
        android:layout_width="359dp"
        android:layout_height="55dp"
        android:textColor="#121010"
        android:textSize="20sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/feedback_view"
        android:layout_width="364dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:textColor="#121010"
        android:textSize="20sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/email_view"
        android:layout_width="362dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:textColor="#121010"
        android:textSize="20sp"
        android:typeface="serif" />


    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="78dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:typeface="serif">





        <Button
            android:id="@+id/delete_button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#C81313"
            android:text="Cancel"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />



        <Button
            android:id="@+id/edit_button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#106713"
            android:text="Edit"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>

</LinearLayout>


