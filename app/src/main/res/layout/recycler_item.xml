<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/recImage"
            android:src="@drawable/add"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

        <TextView
            android:id="@+id/recTitle"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/recImage"
            android:maxLines="3"
            android:text="Title"
            android:textColor="@color/lavender"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/recType"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recTitle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/recImage"
            android:maxLines="2"
            android:text="Type"
            android:textColor="@color/lavender"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/recDescription"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recType"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/recImage"
            android:maxLines="2"
            android:text="Description"
            android:textColor="@color/lavender"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/recPrice"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recDescription"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/recImage"
            android:maxLines="1"
            android:text="Price"
            android:textColor="@color/lavender"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/recContact"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recPrice"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/recImage"
            android:maxLines="1"
            android:text="Contact"
            android:textColor="@color/lavender"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/recAddress"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recContact"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/recImage"
            android:maxLines="2"
            android:text="Address"
            android:textColor="@color/lavender"
            android:textSize="18sp" />




    </RelativeLayout>


</androidx.cardview.widget.CardView>